<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="APPMOBLIE.Checkproduct"
             BackgroundColor="#b3cde0"
            Title="Search" 
             IconImageSource="iconsscan">
    <ContentPage.Content>
        
        <AbsoluteLayout>
            <Image Source="background" Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0,0,1,0.3"
                   AbsoluteLayout.LayoutFlags="All"
                   />
            <StackLayout
                          AbsoluteLayout.LayoutBounds="0,0.2,1,0.2"
                   AbsoluteLayout.LayoutFlags="All"
                Spacing="10">
                <Image Source="logo" HeightRequest="80" WidthRequest="80"/>
                <Label Text="Thayart@tanasan.co.th" HorizontalOptions="Center"
                   />
                <Button Text="scan barcode"  Clicked="Button_Scan"
                         BackgroundColor="#0095b6" 
                    TextColor="White"
                         FontSize="15"
                        FontAttributes="Bold"
                         HorizontalOptions="Center"
                        HeightRequest="40"
                        CornerRadius="15"/>
            </StackLayout >
            <StackLayout 
                AbsoluteLayout.LayoutBounds="0,1,1,0.57"
                   AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional">
                <Grid RowSpacing="25" Padding="20,20,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <BoxView HeightRequest="1" BackgroundColor="#6497b1" Opacity="0.6" 
                             VerticalOptions="Center" 
                             Grid.ColumnSpan="2"  Grid.Row="0"></BoxView>
                    <Label x:Name="Skuinfo" Text="{Binding StringFormat='Sku Id : {0}'}" Grid.ColumnSpan="2"  Grid.Row="1" />
                    <Label x:Name="Prodn" Text="{Binding StringFormat='Product Name : {0}'}"  Grid.ColumnSpan="2" Grid.Row="2" />
                    <Label x:Name="Prodb" Text="{Binding StringFormat='Brand : {0}'}"  Grid.ColumnSpan="2" Grid.Row="3" />
                    <Label x:Name="Prodm" Text="{Binding StringFormat='Model : {0}'}"  Grid.ColumnSpan="2"  Grid.Row="4" />
                    <Label x:Name="Proin" Text="{Binding StringFormat='In Stock : {0}'}" Grid.Column="0" Grid.Row="5" />
                    <Label x:Name="Proout" Text="{Binding StringFormat='Out Stock : {0}'}" Grid.Column="1" Grid.Row="5" />
                    <Label x:Name="Total" Text="{Binding StringFormat='Available : {0}'}" Grid.ColumnSpan="2" Grid.Row="6" />
                </Grid>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>