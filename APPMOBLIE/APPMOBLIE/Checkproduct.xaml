<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="APPMOBLIE.Checkproduct"
             BackgroundColor="#b3cde0">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="background" Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0,0,1,0.3"
                   AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional"
                   />
            <Image Source="logo"  AbsoluteLayout.LayoutBounds="0.5,150,80,80"
                   AbsoluteLayout.LayoutFlags="XProportional"/>
            <Label Text="Thayart@tanasan.co.th" AbsoluteLayout.LayoutBounds="0.5,220,1,40"
                   AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
                   HorizontalOptions="Center"
                   />
            <StackLayout AbsoluteLayout.LayoutBounds="0,1,1,1"
                         AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional"
                         VerticalOptions="Center"
                         Padding="20,100,20,0">
                
                <Grid RowSpacing="25" Padding="0,40,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <BoxView HeightRequest="1" BackgroundColor="#6497b1" Opacity="0.6" VerticalOptions="Center" Grid.ColumnSpan="2"  Grid.Row="0"></BoxView>
                    <Label x:Name="Skuinfo" Grid.ColumnSpan="2"  Grid.Row="1" />
                    <Label x:Name="Prodn"  Grid.ColumnSpan="2" Grid.Row="2" />
                    <Label x:Name="Prodb"  Grid.ColumnSpan="2" Grid.Row="3" />
                    <Label x:Name="Prodm"  Grid.ColumnSpan="2"  Grid.Row="4" />
                    <Label x:Name="Proin"  Grid.Column="0" Grid.Row="5" />
                    <Label x:Name="Proout"  Grid.Column="1" Grid.Row="5" />
                    <Label x:Name="Total"  Grid.ColumnSpan="2" Grid.Row="6" />
                   
                </Grid>
            </StackLayout>
            <StackLayout Orientation="Horizontal"  AbsoluteLayout.LayoutBounds="0,1,1,50"
                         BackgroundColor="black"
                         AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                         Opacity="0.6">
                <Button Text="back" 
                    BackgroundColor="Transparent" 
                    TextColor="White"
                      HorizontalOptions="CenterAndExpand"
                        FontSize="15"
                        FontAttributes="Bold"
                        />
                <Button Text="scan barcode"  Clicked="Button_Scan"
                         BackgroundColor="Transparent" 
                    TextColor="White"
                         FontSize="15"
                        FontAttributes="Bold"
                         HorizontalOptions="CenterAndExpand"
                        />
            </StackLayout>




        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>