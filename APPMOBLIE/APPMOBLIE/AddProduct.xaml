                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                           
                        </Grid.ColumnDefinitions>
                        <Label Text="SKU Number"  Grid.Column="0"  Grid.Row="0" VerticalOptions="Center"/>
                        <Entry x:Name="Mycode" Grid.Column="1"  Grid.Row="0"  />
                        <Button  Clicked="Button_Scan" BackgroundColor="Transparent" ImageSource="barcode.png" WidthRequest="20" HeightRequest="20" Grid.Column="1" Grid.Row="0" HorizontalOptions="End"/>
                       

                        <Label Text="Product Name"   Grid.Column="0" Grid.Row="1" VerticalOptions="Center" />
                        <Entry x:Name="ProductName" Grid.Column="1" Grid.Row="1"/>


                        <Label Text="Product Brand"   Grid.Column="0" Grid.Row="2" VerticalOptions="Center"/>
                        <Entry x:Name="ProductBrand"   Grid.Column="1" Grid.Row="2" />


                        <Label Text="Product Model"  Grid.Column="0"  Grid.Row="3" VerticalOptions="Center"/>
                        <Entry x:Name="ProductModel"  Grid.Column="1"  Grid.Row="3" />

                        <Label Text="Location"  Grid.Column="0"  Grid.Row="4" VerticalOptions="Center" />
                        <Entry x:Name="ProductLocation"  Grid.Column="1"  Grid.Row="4" />

                        <Label Text="Product Unit"  Grid.Column="0"  Grid.Row="5" VerticalOptions="Center" />
                        <Picker x:Name="ProductUnit"
                        Title="select product unit"
                        ItemsSource="{Binding ProductUnit}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Code}"  Grid.Column="1"  Grid.Row="5" />

                        <Label Text="Description"  Grid.Column="0"  Grid.Row="6" VerticalOptions="Center"/>
                        <Entry x:Name="ProductDescription"  Grid.Column="1"  Grid.Row="6" />


                        <Label Text="Product Min"  Grid.Column="0"  Grid.Row="7" VerticalOptions="Center"/>
                        <Entry x:Name="Productmin"  Grid.Column="1"  Grid.Row="7" />

                        <Label Text="Quantity"  Grid.Column="0"  Grid.Row="8" VerticalOptions="Center"/>
                        <Entry x:Name="Quantity"  Grid.Column="1"  Grid.Row="8" />

                        <Label Text="Refer Number"  Grid.Column="0"  Grid.Row="9" VerticalOptions="Center"/>
                        <Entry x:Name="ReferentNumber"  Grid.Column="1"  Grid.Row="9" />

                        <Label Text="Expire Date"  Grid.Column="0"  Grid.Row="10" VerticalOptions="Center"/>
                        <DatePicker x:Name="ProductExpireDate"  Grid.Column="1"  Grid.Row="10" />

                    </Grid>
                    <StackLayout>
                        <Button Text="Save product" Clicked="Button_Save" BackgroundColor="#2B976C" TextColor="White" CornerRadius="10"/>
                    </StackLayout>

                </StackLayout>
               
            </ScrollView>


