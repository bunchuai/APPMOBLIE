<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="APPMOBLIE.AddProduct"
             Title="Add New" 
             IconImageSource="iconsadd"          
             xmlns:ic="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">


    <ContentPage.Content>

        <AbsoluteLayout>

            <Image Source="background" Aspect="AspectFill"
                  AbsoluteLayout.LayoutBounds="0,0,1,0.2"
                   AbsoluteLayout.LayoutFlags="All" />
            <ic:CircleImage Source="userpic.png" 
                           Aspect="AspectFill"
                                HeightRequest="80" WidthRequest="80"
                           AbsoluteLayout.LayoutBounds="0.5,0.15"
                           AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <StackLayout 
                   AbsoluteLayout.LayoutBounds="0,0.12,1,0.38"
                   AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional"
                   VerticalOptions="Center"
                Spacing="20">

                <Label x:Name="Username" HorizontalOptions="Center"
                   />
                <!--<Button Text="Find Product"  Clicked="Button_Scan"
                         BackgroundColor="#0095b6" 
                    TextColor="White"
                         FontSize="15"
                        FontAttributes="Bold"
                         HorizontalOptions="Center"
                        HeightRequest="40"
                        CornerRadius="10"/>-->
            </StackLayout >

            <ScrollView 
                 AbsoluteLayout.LayoutBounds="0,1,1,0.70"
                   AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional">
                <StackLayout 
                             HorizontalOptions="Start" >
                    <Grid RowSpacing="10" Padding="30,20,40,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="SKU Number"  Grid.Column="0"  Grid.Row="0" VerticalOptions="Center"/>
                        <Entry x:Name="Mycode" Grid.Column="1"  Grid.Row="0"  />
                        <Button  Clicked="Button_Scan" BackgroundColor="Transparent" ImageSource="barcode.png" WidthRequest="20" HeightRequest="20" Grid.Column="1" Grid.Row="0" HorizontalOptions="End"/>

                        <Label Text="Product Name"   Grid.Column="0" Grid.Row="1" VerticalOptions="Center" />
                        <Entry x:Name="ProductName" Grid.Column="1" Grid.Row="1"/>

                        <Label Text="Product Brand"   Grid.Column="0" Grid.Row="2" VerticalOptions="Center"/>
                        <Entry x:Name="ProductBrand"   Grid.Column="1" Grid.Row="2" />

                        <Label Text="Product Model"  Grid.Column="0"  Grid.Row="3" VerticalOptions="Center"/>
                        <Entry x:Name="ProductModel"  Grid.Column="1"  Grid.Row="3" />

                        <Label Text="Product Type"  Grid.Column="0"  Grid.Row="4" VerticalOptions="Center" />
                        <Picker x:Name="ProductType"
                                Title="select product type"
                                ItemsSource="{Binding ProductType}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding Code}"  
                                Grid.Column="1"  
                                Grid.Row="4" />

                        <Label Text="Location"  Grid.Column="0"  Grid.Row="5" VerticalOptions="Center" />
                        <Picker x:Name="ProductLocation"
                                Title="select location"
                                ItemsSource="{Binding ProductLocation}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding Code}"  
                                Grid.Column="1"  
                                Grid.Row="5" />

                        <Label Text="Product Unit"  Grid.Column="0"  Grid.Row="6" VerticalOptions="Center" />
                        <Picker x:Name="ProductUnit"
                                Title="select product unit"
                                ItemsSource="{Binding ProductUnit}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding Code}"  
                                Grid.Column="1"  
                                Grid.Row="6" />

                        <Label Text="Description"  Grid.Column="0"  Grid.Row="7" VerticalOptions="Center"/>
                        <Entry x:Name="ProductDescription"  Grid.Column="1"  Grid.Row="7" />

                        <Label Text="Product Min"  Grid.Column="0"  Grid.Row="8" VerticalOptions="Center"/>
                        <Entry x:Name="Productmin"  Grid.Column="1"  Grid.Row="8"  Keyboard="Numeric"/>

                        <Label Text="Quantity"  Grid.Column="0"  Grid.Row="9" VerticalOptions="Center"/>
                        <Entry x:Name="Quantity"  Grid.Column="1"  Grid.Row="9" Keyboard="Numeric"/>

                        <Label Text="Refer Number"  Grid.Column="0"  Grid.Row="10" VerticalOptions="Center"/>
                        <Entry x:Name="ReferentNumber"  Grid.Column="1"  Grid.Row="10" />

                        <Label Text="Expire Date"  Grid.Column="0"  Grid.Row="11" VerticalOptions="Center"/>
                        <DatePicker x:Name="ProductExpireDate"  Grid.Column="1"  Grid.Row="11" />
                    </Grid>
                    <StackLayout>
                        <Button Text="Save product" Clicked="Button_Save" BackgroundColor="#2B976C" TextColor="White" CornerRadius="10"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>