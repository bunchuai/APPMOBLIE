                                                  FontFamily="{StaticResource Kanit}" FontSize="Small" TextColor="White"
                                               HorizontalOptions="Center" Grid.Column="3" Grid.Row="0"/>


                                        
                                   

                                    </Grid>

                                    <!--<BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill"/>-->
